(name graphql)
(description "A GraphQL API with an optimized developer experience.")

(command (
  (name "esy x server.exe")
  (description "Starts the web server.")
))

(command (
  (name "esy install")
  (description "Download and lock the dependencies.")
))

(command (
  (name "esy build")
  (description "Ensure all dependencies are built and compile the project.")
))

(command (
  (name "esy test")
  (description "Starts the test runner.")
))

(starting_command (
  (command esy)
  (args (x "server.exe"))
))

(tutorial "https://github.com/tmattio/spin-templates/tree/master/graphql/tutorials")
