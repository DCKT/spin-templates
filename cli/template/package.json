{
  "name": "{{ project_slug }}",
  "version": "0.1.0",
  "description": "{{ project_description }}",
  "esy": {
    "build": "dune build --root . --only-packages {{ project_slug }}",
    "buildDev": "pesy",
    "buildsInSource": "_build",
    "release": {
      "bin": {
        "{{ project_slug }}": "{{ project_slug }}.exe"
      }
    }
  },
  "buildDirs": {
    "test": {
      "require": [
        "{{ project_slug }}.lib",
        "rely.lib"
      ],
      "flags": [
        "-open Base",
        "-linkall",
        "-g"
      ],
      "includeSubdirs": "unqualified",
      "main": "TestRunner",
      "name": "test-runner.exe"
    },
    "library": {
      "preprocess": [
        "pps",
        "lwt_ppx",
        "ppx_let"
      ],
      "require": [
        "base",
        "console.lib",
        "pastel.lib",
        "lwt.unix",
        "str"
      ],
      "flags": [
        "-open Base"
      ],
      "includeSubdirs": "unqualified",
      "name": "{{ project_slug }}.lib",
      "namespace": "{{ project_slug | camel_case }}"
    },
    "executable": {
      "preprocess": [
        "pps",
        "lwt_ppx",
        "ppx_let"
      ],
      "require": [
        "base",
        "cmdliner",
        "lwt.unix",
        "console.lib",
        "pastel.lib",
        "{{ project_slug }}.lib"
      ],
      "flags": [
        "-open Base"
      ],
      "includeSubdirs": "unqualified",
      "main": "{{ project_slug | camel_case }}App",
      "name": "{{ project_slug }}.exe"
    }
  },
  "dependencies": {
    "@esy-ocaml/reason": "3.5.2",
    "@opam/base": "v0.13.0",
    "@opam/cmdliner": "1.0.4",
    "@opam/dune": ">=1.6.0",
    "@opam/lwt": "4.4.0",
    "@opam/lwt_ppx": "1.2.4",
    "@opam/ppx_let": "v0.13.0",
    "@reason-native/console": "^0.1.0",
    "@reason-native/pastel": "^0.2.2",
    "@reason-native/rely": "^3.1.0",
    "ocaml": "4.8.1000"
  },
  "devDependencies": {
    "@opam/merlin": "*",
    "@opam/odoc": "*",
    "@opam/utop": "*",
    "refmterr": "*",
    "pesy": "*"
  },
  "scripts": {
    "pesy": "bash -c 'env PESY_MODE=update pesy'",
    "fmt": "esy dune build @fmt --auto-promote",
    "test": "esy x test-runner.exe",
    "watch": "esy dune build --root . --only-packages {{ project_slug }} --watch",
    "doc": "esy dune build @doc",
    "utop": "esy dune utop library -- -implicit-bindings"
  }
}