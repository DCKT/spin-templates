{
  "name": "{{ project_slug }}",
  "version": "0.1.0",
  "description": "OCaml and ReasonML project scaffolding.",
  "esy": {
    "build": "dune build -p <PACKAGE_NAME>",
    "buildDev": "pesy",
    "release": { "releasedBinaries": [ "{{ project_slug }}.exe" ] }
  },
  "buildDirs": {
    "test": {
      "require": [ "{{ project_slug }}.lib", "rely.lib" ],
      "main": "Test{{ project_slug | camel_case }}",
      "name": "Test{{ project_slug | camel_case }}.exe"
    },
    "library": {
      "preprocess": [ "pps", "lwt_ppx", "ppx_let", "ppx_sexp_conv" ],
      "require": [
        "base", "console.lib", "pastel.lib", "lwt.unix", "str", "sexplib"
      ],
      "name": "{{ project_slug }}.lib",
      "namespace": "{{ project_slug | camel_case }}"
    },
    "executable": {
      "preprocess": [ "pps", "lwt_ppx", "ppx_let" ],
      "require": [
        "base", "cmdliner", "lwt.unix", "console.lib", "pastel.lib",
        "{{ project_slug }}.lib"
      ],
      "flags": [ "-ccopt", "-lgmp" ],
      "main": "{{ project_slug | camel_case }}App",
      "name": "{{ project_slug }}.exe"
    }
  },
  "scripts": {
    "pesy": "bash -c 'env PESY_MODE=update pesy'",
    "fmt": "bash -c 'esy refmt --in-place ./*/*.re'",
    "test": "esy x Test{{ project_slug | camel_case }}.exe"
  },
  "dependencies": {
    "@esy-ocaml/reason": "3.5.2",
    "@opam/base": "v0.13.0",
    "@opam/cmdliner": "1.0.4",
    "@opam/dune": ">=1.6.0",
    "@opam/lwt": "4.4.0",
    "@opam/lwt_ppx": "1.2.4",
    "@opam/ppx_let": "v0.13.0",
    "@opam/ppx_sexp_conv": "v0.13.0",
    "@opam/sexplib": "v0.13.0",
    "@reason-native/console": "^0.1.0",
    "@reason-native/pastel": "^0.2.2",
    "ocaml": "4.8.1000"
  },
  "devDependencies": {
    "@opam/merlin": "3.3.2",
    "@reason-native/rely": "^3.1.0",
    "refmterr": "3.2.2",
    "pesy": "0.4.4"
  }
}